<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/communication_but"
            android:src="@drawable/communications_icon" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/podcast_but"
            android:src="@drawable/podcasts_icon"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/videos_but"
            android:src="@drawable/videos_icon"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/schedule"
            android:src="@drawable/schedule_icon"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/online_but"
            android:src="@drawable/online_courses_icon"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/face_login"
            android:src="@drawable/facebook_icon"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/referBtn"
            android:src="@drawable/referral"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/memberList"
            android:src="@drawable/memberslist"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/logout_but"
            android:src="@drawable/logout_icon"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</LinearLayout>
